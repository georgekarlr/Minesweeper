package minesweeper

fun generateMinefield(rows: Int, cols: Int, numMines: Int): Array<Array<Char>> {
    val minefield = Array(rows) { Array(cols) { ',' } }
    var numMinesPlaced = 0
    while (numMinesPlaced < numMines) {
        val row = (0 until rows).random()
        val col = (0 until cols).random()
        if (minefield[row][col] != 'M') {
            minefield[row][col] = 'M'
            numMinesPlaced++
        }
    }
    return minefield
}

fun printMinefield(minefield: Array<Array<Char>>) {
    for (row in minefield) {
        println(row.joinToString(""))
    }
}

fun main() {
    val rows = 9
    val cols = 9
    val numMines = 10
    val minefield = generateMinefield(rows, cols, numMines)
    printMinefield(minefield)
}

